<% layout('layout/page') -%>

<% block('title', 'Авторизация'); -%>

  <h1>Профиль пользователя</h1>
  
  
  
  
  
<% if (user) { %>
<h2> Добро пожаловать, <%= user.Name %></h2>
<h2> Добро пожаловать, <%= user.Email %></h2>
<% } %>


      
      
<form id="register_form">

    <div class="form-group md-6">
      <label for="inputEmail">Email</label>
      <input type="email" class="form-control" id="inputEmail" disabled>
    </div>
      
    
    
    <div class="form-group md-6">
        <label for="inputName">Фамилия и Имя</label>
        <input type="text" class="form-control" id="inputAddress">
    </div>

    <div class="form-group md-6">
      <label for="position">Должность</label>
      <input type="text" class="form-control" id="inputCity">
    </div>
    
    <div class="form-group md-6">
      <label for="departament">Цех, участок</label>
      <input type="text" class="form-control" id="inputCity">
    </div>
    
    <p>Поменять пароль</p>
    
    <div class="form-group md-6">
        <label for="inputPassword">Старый пароль</label>
        <input type="password" class="form-control" id="inputOldPassword">
    </div>
    
    <div class="form-group md-6">
        <label for="inputPassword">Новый пароль</label>
        <input type="password" class="form-control" id="inputNewPassword">
    </div>
    
    <div class="form-group md-6">
        <label for="inputPassword">Подтвердить Пароль</label>
        <input type="password" class="form-control" id="confirmPassword">
    </div>
      
      
 <button type="submit" id='save-profile' class="btn btn-primary">Сохранить</button>
  

  
  
  
</form> 