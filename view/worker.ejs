 <% layout('layout/page') -%>

<% block('title', 'Отчет'); -%>

  <script src="./js/worker_load.js"></script>


<h1>Список работников</h1>


<p>Редактировать работника</p>


<button type="button" class="btn btn-secondary" data-toggle='modal' data-target='#WorkerEditModal'>Добавить Работника</button>



<div class="list_worker" id="worker_list_worker">
    
    <h3> Статус ответа от базы данных: <%= status %> </h3>
    

 <!-- TODO: if ul li to enable-->   
<% if (data != "") { %>
<ul>
    <li>
        <button type="button" class="btn btn-secondary" data-toggle='modal' data-target='#WorkerEditModal'>Редактировать</button>
    </li>
</ul>
<% } %> 


    
</div>













<!-- Modal -->
<div class="modal fade" id="WorkerEditModal" tabindex="-1" role="dialog" aria-labelledby="WorkerEditModalLabel" aria-hidden="true">
    
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Информация о работнике</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          
          <input class="form-control worker_input_modal" type="text" id="FirstName" placeholder="Фамилия"></input>
          <input class="form-control worker_input_modal" type="text" id="LastName" placeholder=" Имя"></input>
          <input class="form-control worker_input_modal" type="text" id="LastName2" placeholder="Отчество"></input>
          <input class="form-control worker_input_modal" type="text" id="Profession" placeholder="Профессия"></input>
          <input class="form-control worker_input_modal" type="text" id="Quality" placeholder="Разряд"></input>
          <input class="form-control worker_input_modal" type="text" id="Status" placeholder="Статус"></input>
          <textarea class="form-control worker_input_modal" type="text" id="Comment" placeholder="Комментарии" rows="5" cols="40"></textarea>
          

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="worker_save">Сохранить</button>
      </div>
    </div>
  </div>
</div>

